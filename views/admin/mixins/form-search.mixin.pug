mixin form-search(textSearch)
    form(id="form-search")
        .input-group    
            input(
                type="text"
                placeholder="Input keyword"
                name="keyword"
                class="form-control"
                value=textSearch
            )
            .input-group-append 
                button(
                    class="btn btn-secondary"
                    type="submit"
                ) Search