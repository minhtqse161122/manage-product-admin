mixin product-component(data, index)
    td #{index+1}
    td 
        img(
            src=data.thumbnail
            alt=data.title
            width="100px"
            height="auto"
            )
    td #{data.title}
    td #{data.price}
    td
        if(data.status == 'active') 
            a(
                href='javascript:;' 
                btn-change-status 
                data-status=data.status
                data-id=data.id
                class="") Active 
        else 
            a(
                href='javascript:;' 
                btn-change-status 
                data-status="inactive" 
                data-id=data.id
                class="text-danger") Inactive                              
    td
        button(class="btn btn-warning btn-sm") Edit                      
        button(class="btn btn-danger btn-sm") Delete 