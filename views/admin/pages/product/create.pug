extends ../../layout/_default-layout.pug

block main  
  h1(class="mb-4")=title

  form(
    action=`${prefixAdmin}/products/create`
    method="POST"
    enctype="multipart/form-data"
    id="form-create-product"
  )
    div(class="form-group mb-2")
      label(for="title") Title 
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    div(class="form-group mb-2")
      label(for="desc") Description 
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        required
      ) 
    div(class="form-group mb-2")
      label(for="price") Price 
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value="0"
        min="0"
        required
      )
    div(class="form-group mb-2")
      label(for="discount") % Discount
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value="0"
        min="0"
        required
      )
    div(class="form-group mb-2")
      label(for="stock") Stock
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value="0"
        min="0"
        required
      )
    div(class="form-group mb-2" upload-image)
      label(for="thumbnail") Image
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
    image(id="img-preview" width="200" height="200" upload-image-preview)

    div(class="form-group mb-2")
      label(for="position") Position
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Auto increase"
        min="1"
      )
    div(class="form-group mb-2 form-check form-check-inline")
      input(
        type="radio"
        id="statusActive"
        name="status"
        value="active"
        checked  
      )
      label(for="statusActive" class="form-check-label") Active 
    div(class="form-group mb-2 form-check form-check-inline")
      input(
        type="radio"
        id="statusInactive"
        name="status"
        value="inactive"
        checked  
      )
      label(for="statusInactive" class="form-check-label") Inactive 

    div(class="form-group")
      button(type="submit" class="btn btn-primary") Create new




